<?xml version="1.0" encoding="utf-8"?>
<com.thunderpunch.ladderlayoutmanager.sample.view.VerticalSampleItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/add"
        android:layout_width="@dimen/add_button_width"
        android:layout_height="@dimen/add_button_height"
        android:layout_margin="@dimen/item_max_elevation"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/item_radius">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            app:srcCompat="@drawable/ic_add" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/item_max_elevation"
        android:layout_marginLeft="@dimen/item_max_elevation"
        android:layout_marginRight="@dimen/item_max_elevation"
        android:layout_marginTop="@dimen/item_content_top_margin"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/item_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/shape_round_rect_white"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="content"
                android:textSize="13dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</com.thunderpunch.ladderlayoutmanager.sample.view.VerticalSampleItemLayout>